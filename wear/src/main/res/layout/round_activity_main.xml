<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity" tools:deviceIds="wear_round"
    android:background="@color/white">

    <com.iantoxi.prg02.SerifTextView android:id="@+id/logo" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="40dp"
        android:text="@string/app_name"
        android:textColor="@color/black"
        />

    <ImageView
        android:adjustViewBounds="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ferris"/>

    <com.iantoxi.prg02.SerifTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo"
        android:textColor="@color/black"
        android:text="@string/excited_button"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:textStyle="italic"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/excited_button"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:onClick="excitedClick"
        android:background="?android:attr/selectableItemBackground"/>

</RelativeLayout>
